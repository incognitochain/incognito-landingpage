mixin subscribe_email(btnText = 'Subscribe', from = '')
  form(onsubmit='return false;', from=from)#email-subscribe
    input(placeholder='Enter your email', required, type='email', pattern='[A-Za-z0-9._%+-]{3,}@[a-zA-Z0-9-]{2,}([.]{1}[a-zA-Z]{2,}|[.]{1}[a-zA-Z]{2,}[.]{1}[a-zA-Z]{2,})')#email-input
    button(type='submit').submit-email= btnText