- var price = '$299'
- var quantity = 1
div#cart-container
    div.order-items
        div.product
            span.product-quantity=quantity
            img.product-image(
                alt="Node",
                src=require("../../image/device.png")
            )
        div.product-name Node
        div.product-price.price=price
    div.order-summary
        div.content-two-columns.separator
            div.left
                div Subtotal
                div Shipping
            div.right
                div.sub-total-price=price
                div.shipping-price FREE
        div.content-two-columns
            div.left
                div.total-label Total
            div.right
                span.total-price.price=price
        div.content-two-columns#pay-with-crypto.hidden
            div.left
                div.total-label.highlight Pay with 
                    span.coin-name
            div.right
                span.total-price.price 
    include ./crypto_guide
    +crypto_guide()