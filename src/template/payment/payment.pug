div#payment-container
    ul.breadcrumb.desktop
        li.breadcrumb-item
            a.link(href='#') Information
            img.icon(src=require('../../image/icon/chevron-right-light.svg'), alt='right')
        li.breadcrumb-item.active
            span Payment
    div.information
        div.three-lines-content
            div Ship to
            div#ship-to
            a.link(href='#') Change
    div.payment#pay-with-crypto
        h2 Pay with crypto
        div.card-input.payment-wrapper
            div.card-type
                div.types
                    img(src=require('../../image/icon/btc.svg'))
                    img(src=require('../../image/icon/eth.svg'))
                    img(src=require('../../image/icon/bnb.svg'))
                    img(src=require('../../image/icon/usdt.svg'))
                    span and more...
            div.card-information.input-wrapper
                div.select-two-lines-label
                    div.select-wrapper.input-field
                        select(name='coin-name')#coin-name
                            option(value='BTC') Bitcoin (BTC)
                            option(value='ETH') Ethereum (ETH)
                            option(value='BNB') Binance (BNB)
                            option(value='USDT') Tether (USDT)
                            option(value='USDC') USD Coin (USDC)
                            option(value='TUSD') TrueUSD (TUSD)
                            option(value='PAX') Paxos Standard (PAX)
                            option(value='GUSD') Gemini Dollar (GUSD)
                            option(value='USDS') Stably (USDS)
                            option(value='BUSD') Binance USD (BUSD)
                        div.caret
                            img.icon(src=require('../../image/icon/caret-down-solid.svg'), alt='caret')
            div.button-wrapper
                button#submit-payment-btn Pay now