div#payment-container
    ul.breadcrumb.desktop
        li.breadcrumb-item
            a.link(href='#') Information
            img.icon(src=require('../../image/icon/chevron-right-light.svg'), alt='right')
        li.breadcrumb-item.active
            span Payment
    //- div.information
    //-     div.three-lines-content
    //-         div Ship to
    //-         div=shipAddress
    //-         a.link(href='#') Change
    div.payment
        h2 Payment
        p 
        div.card-input
            div.card-type
                div Crypto currencies
                div.types
                    img(src=require('../../image/icon/bitcoin.png'))
                    img(src=require('../../image/icon/ethereum.png'))
                    img(src=require('../../image/icon/binance.png'))
                    img(src=require('../../image/icon/tether.png'))
                    span and more...
            div.card-information.input-wrapper
                div.select-two-lines-label
                    div.select-wrapper.input-field
                        label(for='coin-name') Coin
                        select(name='coin-name')#coin-name
                            option(value='BTC') BTC
                            option(value='ETH') ETH
                            option(value='BNB') BNB
                            option(value='USDT') USDT
                            option(value='USDC') USDC
                            option(value='TUSD') TUSD
                            option(value='PAX') PAX
                            option(value='GUSD') GUSD
                            option(value='USDS') BUSD
    div.button-wrapper
        div.return
            img.icon(src=require('../../image/icon/chevron-left-light.svg'), alt='left')
            a.link(href='#') Return to shipping
        button#submit-payment-btn Pay now