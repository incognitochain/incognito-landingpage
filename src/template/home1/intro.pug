mixin benefit(img, label, desc, imgClass='')
  .benefit
    div(class='icon ' + imgClass)
      img(src= img)
    .content
      span.label= label
      span.desc= desc

div#intro-container
  .content
    div.intro
      div
        h1.heading INCOGNITO NODE
        h1.title  Earn crypto in your sleep.
        div(auto-collapse-first-item='false').collapse-container
          include ../common/collapse.pug
          +collapseItem('<div class="earn-description">Collect <span class="highlight">$25 monthly</span> in BTC, ETH, BNB and today’s most exciting cryptocurrencies.</div>')
            
        div.description 
          p.extra Built by a bunch of geeks who shipped $100M+ of connected hardware worldwide.

      .subscribe-price-container
        include ../common/price_info.pug
        include ../common/subscribe_email_component.pug

      .benefit-container
        .benefit-group
          +benefit(require('../../image/icon/income.svg'), 'Earn passive income', 'Automatically collect crypto every second of every day')
          +benefit(require('../../image/icon/energy-saving.svg'), 'Energy efficient', 'Just 1 kWh (about 8 cents a day) to run all day')
          +benefit(require('../../image/icon/effortless.svg'), 'Effortless', 'Just plug Node in and let it work for you.', 'easy')

        .benefit-group
          +benefit(require('../../image/icon/warranty.svg'), '1-year warranty', 'If something goes wrong we’ll fix it. Easy.')
          +benefit(require('../../image/icon/trail.svg'), '30-day trial', 'If you don’t love your Node, return it for a full refund.')
          +benefit(require('../../image/icon/worldwide.svg'), 'Ships worldwide', 'Anyone, anywhere, can own a Node.')
    .question#faq
      include ./question.pug
