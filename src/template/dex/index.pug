extends ../layout.pug


block title
    title Go Incognito. Buy and sell Bitcoin anonymously without KYC.

block meta
    - var descriptionContent = `You don’t have to give up your identity to buy and sell Bitcoin anonymously. You don’t have to surrender your documents to trade Ethereum and other coins. pDEX is first non-custodial, completely decentralized, anonymous Bitcoin exchange. Oh, and you can become a liquidity provider and list your own trading pairs.`;
    meta(property="og:image" content="/Aboutus.png")
    meta(name='description', content=descriptionContent)
    meta(name='og:description' content=descriptionContent)
    meta(name='twitter:description' content=descriptionContent)   

block main
    include ../header.pug
    div#dex-container.abs-center-ver
        .extra.abs-center-ver
            .trading-board-container
                .tb-intro
                    p.desc
                        | Trading board
                - var cryptoFactories = [
                -        {cryptoImg: require('../../image/dex/btc.svg'), cryptoName: "pBTC",lastPrice: "$7,000",priceAction: require('../../image/dex/price_up.svg') },
                -        {cryptoImg: require('../../image/dex/eth.svg'),cryptoName: "pETH",lastPrice: "$7,000",priceAction: require('../../image/dex/price_down.svg')},
                -        {cryptoImg: require('../../image/dex/prv.svg'),cryptoName: "pPRV",lastPrice: "$7,000",priceAction: require('../../image/dex/price_down.svg')},
                -        {cryptoImg: require('../../image/dex/bnb.svg'),cryptoName: "pBNB",lastPrice: "$7,000",priceAction: require('../../image/dex/price_up.svg')},
                -        {cryptoImg: require('../../image/dex/one.svg'),cryptoName: "pOne",lastPrice: "$7,000",priceAction: require('../../image/dex/price_up.svg')}
                -   ]
                .tb-main
                    .crypto-item 
                        p.crypto-name
                            | Name
                        p.last-price
                            | Last price      
                    each item in cryptoFactories
                        include item_trading_board
                        +cryptoItem(item)
            div.device
                div.img-container
            include intro.pug